PG-35: Susceptibility Modeling

df_copy = df.copy()
independent_variables = sorted(df_copy.drop('GRAD_DEBT_MDN', axis=1).columns)
dependent_variable = 'GRAD_DEBT_MDN'

# Determine grid size for subplots
num_independent_vars = len(independent_variables)
rows = int(num_independent_vars**0.5)
cols = (num_independent_vars + rows - 1) // rows # Calculate columns to ensure all plots fit

# Fill nan values with 0 to create trendlines
df_copy.fillna(0, inplace=True)

# Drop variables due to categorical
drop_cats = independent_variables.remove('STABBR')


fig, axs = plt.subplots(rows, cols, figsize=(7 * cols, 6 * rows))
axs = axs.flatten()

for i, ind_var in tqdm(enumerate(independent_variables)):
    x = df_copy[ind_var]
    y = df_copy[dependent_variable]
    
    axs[i].scatter(x, y)

    if x.dtype and y.dtype != 'object':
        # Trendlines
        z = np.polyfit(x, y, 1)
        p = np.poly1d(z)
        axs[i].plot(x, p(x), "r--", label="Trendline")
    
    axs[i].set_xlabel(ind_var)
    axs[i].set_ylabel(dependent_variable)
    axs[i].set_title(f'{ind_var} vs {dependent_variable}')

plt.tight_layout()
plt.savefig("Variables with Trendlines.png")
plt.show()


