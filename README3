def fr_correlation_heatmap(df: pd.DataFrame) -> go.Figure:
    """
    Show representation (%) of each feature/value among High-FR and Low-FR runs.

    For categorical features:
        each 'Feature=Value' combination is treated separately (one-hot style),
        and we compute the % of High-FR vs Low-FR runs that contain that value.

    For numeric features:
        we use quartiles — bin into Q1..Q4 — and compute how much each quartile
        appears in High-FR vs Low-FR runs (showing which ranges dominate).

    The result is a 2-row heatmap:
        - Row 1: % of High-FR runs containing each feature/value
        - Row 2: % of Low-FR runs containing each feature/value
    """
    fig = go.Figure()
    seg = make_fr_segments(df)
    if seg is None or seg.isna().all():
        fig.update_layout(title="FR representation (segments unavailable)",
                          height=200, margin=dict(l=10, r=10, t=40, b=40))
        return fig

    # --- Prepare masks ---
    high_mask = seg == "High FR"
    low_mask = seg == "Low FR"
    high_df = df.loc[high_mask]
    low_df = df.loc[low_mask]

    rep_dict_high = {}
    rep_dict_low = {}

    for feat in FEATURES_FOR_ANALYSIS:
        if feat not in df.columns:
            continue

        s = df[feat]
        # ---- Categorical feature: measure % of each value ----
        if not np.issubdtype(s.dtype, np.number):
            high_counts = high_df[feat].value_counts(normalize=True)
            low_counts = low_df[feat].value_counts(normalize=True)
            all_vals = set(high_counts.index) | set(low_counts.index)
            for val in all_vals:
                label = f"{feat}={val}"
                rep_dict_high[label] = 100 * high_counts.get(val, 0.0)
                rep_dict_low[label] = 100 * low_counts.get(val, 0.0)
        else:
            # ---- Numeric feature: bin into quartiles ----
            q = pd.qcut(s.rank(method="first"), 4, labels=["Q1","Q2","Q3","Q4"])
            df_bin = df.assign(_bin=q)
            high_counts = df_bin.loc[high_mask, "_bin"].value_counts(normalize=True)
            low_counts = df_bin.loc[low_mask, "_bin"].value_counts(normalize=True)
            for val in ["Q1","Q2","Q3","Q4"]:
                label = f"{feat}:{val}"
                rep_dict_high[label] = 100 * high_counts.get(val, 0.0)
                rep_dict_low[label] = 100 * low_counts.get(val, 0.0)

    if not rep_dict_high:
        fig.update_layout(
            title="FR representation (no valid features)",
            height=220, margin=dict(l=10, r=10, t=40, b=40),
        )
        return fig

    # --- Construct DataFrame and limit to top features by High-FR representation ---
    df_rep = pd.DataFrame({
        "High_FR": pd.Series(rep_dict_high),
        "Low_FR": pd.Series(rep_dict_low)
    }).fillna(0.0)

    # Rank by which features dominate High-FR
    top_idx = df_rep["High_FR"].sort_values(ascending=False).head(10).index
    df_top = df_rep.loc[top_idx]

    mat = df_top.T  # rows: High_FR, Low_FR

    fig.add_trace(go.Heatmap(
        z=mat.values,
        x=mat.columns.tolist(),
        y=mat.index.tolist(),
        text=mat.round(1).astype(str) + "%",
        texttemplate="%{text}",
        zmin=0, zmax=100,
        colorscale="YlOrRd",
        colorbar=dict(title="% representation"),
    ))

    fig.update_layout(
        title="Feature Representation (% share) among High-FR and Low-FR runs",
        height=300,
        margin=dict(l=10, r=10, t=40, b=10),
    )
    return fig



