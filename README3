PG-35: Susceptibility Modeling


import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import ast

# ---------------------------------------------------------
# 1. LOAD DATA (Replace this block with pd.read_csv for your real data)
# ---------------------------------------------------------
# Generating synthetic data to demonstrate the structure
np.random.seed(42)
num_rows = 200
data = []
pattern_types = ['ZigZag', 'Circle', 'Straight']

for i in range(num_rows):
    # Simulating 3 runners
    runners_loc = [[np.random.uniform(32, 33), np.random.uniform(-97, -96), 150] for _ in range(3)]
    runners_speed = [np.random.randint(10, 50) for _ in range(3)]
    it_loc = [np.random.uniform(32, 33), np.random.uniform(-97, -96), 150]
    target_idx = np.random.randint(0, 3)
    
    row = {
        'timestep': i,
        'runners_location': str(runners_loc), # Simulated CSV string format
        'runner_speed': str(runners_speed),
        'it_location': str(it_loc),
        'it_runner_index': target_idx,
        'pattern_type': str(pattern_types),
        'runner_pattern_index': str([0, 1, 2]), # Fixed patterns for demo
        'outcome': 'tag' if np.random.random() > 0.8 else 'untag',
        'it_speed': np.random.randint(20, 60)
    }
    data.append(row)

df = pd.DataFrame(data)

# ---------------------------------------------------------
# 2. PREPROCESSING
# ---------------------------------------------------------
# Columns that contain lists often get loaded as strings from CSVs.
# We apply ast.literal_eval to convert "[1, 2]" string back to [1, 2] list.
list_cols = ['runners_location', 'runner_speed', 'it_location', 
             'runner_pattern_index', 'pattern_type']

for col in list_cols:
    # distinct check to ensure we don't eval lists if they are already lists
    if isinstance(df[col].iloc[0], str):
        df[col] = df[col].apply(ast.literal_eval)

# ---------------------------------------------------------
# 3. FEATURE ENGINEERING
# ---------------------------------------------------------
def calculate_distance(row):
    """
    Calculates Euclidean distance between IT drone and TARGET runner.
    NOTE: If coordinates are Lat/Lon/Alt, convert to ECEF (X,Y,Z) 
    first for accurate meter distance. This uses raw values.
    """
    it_loc = np.array(row['it_location'])
    target_idx = row['it_runner_index']
    target_loc = np.array(row['runners_location'][target_idx])
    
    # Euclidean distance
    return np.linalg.norm(it_loc - target_loc)

def get_target_pattern(row):
    """Extracts the specific flight pattern of the target runner"""
    try:
        pidx = row['runner_pattern_index'][row['it_runner_index']]
        return row['pattern_type'][pidx]
    except:
        return 'Unknown'

df['distance_to_target'] = df.apply(calculate_distance, axis=1)
df['target_pattern'] = df.apply(get_target_pattern, axis=1)

# ---------------------------------------------------------
# 4. VISUALIZATION
# ---------------------------------------------------------
plt.figure(figsize=(15, 10))

# Plot 1: Outcome Counts
plt.subplot(2, 2, 1)
df['outcome'].value_counts().plot(kind='bar', color=['skyblue', 'salmon'])
plt.title('Distribution of Outcomes (Tag vs Untag)')
plt.ylabel('Count')

# Plot 2: Distance vs Outcome
plt.subplot(2, 2, 2)
# We expect tags to happen at close distances (or 0 distance)
# Aggregating distance by outcome
distances = [df[df['outcome'] == u]['distance_to_target'] for u in df['outcome'].unique()]
plt.boxplot(distances, labels=df['outcome'].unique())
plt.title('Distance to Target by Outcome')
plt.ylabel('Distance')

# Plot 3: Success Rate by Pattern
plt.subplot(2, 2, 3)
ct = pd.crosstab(df['target_pattern'], df['outcome'])
ct.plot(kind='bar', stacked=True, ax=plt.gca())
plt.title('Outcome by Target Runner Pattern')
plt.ylabel('Count')

# Plot 4: Speed Distribution
plt.subplot(2, 2, 4)
# Flatten list of lists for runner speeds
all_runner_speeds = [s for sublist in df['runner_speed'] for s in sublist]
plt.hist(all_runner_speeds, alpha=0.5, label='Runners', bins=20)
plt.hist(df['it_speed'], alpha=0.5, label='It Drone', bins=20)
plt.title('Speed Distribution: Runner vs It')
plt.legend()

plt.tight_layout()
plt.show() # Use plt.savefig('eda.png') in non-interactive environments

